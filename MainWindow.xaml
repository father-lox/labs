<Window x:Class="FL_NUMBER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FL_NUMBER"
        mc:Ignorable="d"
        Background="Black"
        Foreground="#666"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid x:Name="mainMenu">
            <StackPanel Margin="210 0 0 0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
                <TextBlock Margin="0 0 0 30" HorizontalAlignment="Left" TextWrapping="Wrap" Text="FL NUMBER" Foreground="#FF666666" FontFamily="Arial Narrow Bold" FontSize="36"/>
                <Button x:Name="singleGame" Content="Одиночная игра"/>
                <Button x:Name="cooperationGame" Content="Кооперативная игра игра"/>
                <Button x:Name="multiplayerGame" Content="Многопользовательска игра"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
